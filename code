pragma solidity 0.8.26;
contract GradingSystem {
    address public teacher;
    mapping (address => uint) public grades;

    constructor() {
        teacher = msg.sender;
    }

    function submitGrade(address student, uint grade) public {
        require(msg.sender == teacher, "Only the teacher can submit grades");
        require(grade >= 0 && grade <= 100, "Grade must be between 0 and 100");
        assert(grades[student] == 0);
        grades[student] = grade;
        if (grade < 40) {
            revert("Grade is too low");
        }
    }
}
